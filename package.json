{
  "name": "personal-website",
  "version": "1.0.0",
  "description": "Simple static site served by Express",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build:css": "npx tailwindcss -i ./src/tailwind.css -o ./_site/assets/css/tailwind.css --minify",
    "watch:css": "npx tailwindcss -i ./src/tailwind.css -o ./_site/assets/css/tailwind.css --watch"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0"
  }
}
